nextflow_process {

    name "Test Process IDMAPPING"
    script "modules/local/idmapping/main.nf"
    process "IDMAPPING"
    tag "idmapping"

    test("Map Ensembl IDs to themselves") {

        when {
            process {
                """
                count_file = file("$baseDir/tests/input/counts.ensembl_ids.csv")
                input[0] = [count_file, "Solanum tuberosum"]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out.csv).match()
        }

    }

    test("Map NCBI IDs") {

        when {
            process {
                """
                count_file = file("$baseDir/tests/input/counts.ncbi_ids.csv")
                input[0] = [count_file, "Arabidopsis thaliana"]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out.csv).match()
        }

    }


    test("Map Uniprot IDs") {

        when {
            process {
                """
                count_file = file("$baseDir/tests/input/counts.uniprot_ids.csv")
                input[0] = [count_file, "Arabidopsis thaliana"]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out.csv).match()
        }

    }

}
