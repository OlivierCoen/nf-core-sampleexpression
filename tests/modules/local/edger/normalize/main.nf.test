nextflow_process {

    name "Test Process EDGER_NORMALIZE"
    script "modules/local/edger/normalize/main.nf"
    process "EDGER_NORMALIZE"
    tag "edger_normalize"

    test("Should run without failures") {

        when {

            process {
                """
                input[0] = ["E-MTAB-552", file('$baseDir/tests/input/normalize/all_counts.csv')]
                input[1] = file('$baseDir/tests/input/normalize/design.csv')
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
